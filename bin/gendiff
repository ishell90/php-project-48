#!/usr/bin/env php
<?php

use Docopt;

function run(){

    $doc = <<<DOC
    Generate diff
    
    Usage:
        gendiff (-h|--help)
        gendiff (-v|--version)
    
    Options:
        -h --help                     Show this screen
        -v --version                  Show version
    
    DOC;
    
    $args = Docopt::handle($doc, array('help' => 'help me pls', 'version' => '2.0'));
    foreach ($args as $k=>$v)
        echo $k.': '.json_encode($v).PHP_EOL;
    
    dump($argc);
    }
print_r(run()); 
